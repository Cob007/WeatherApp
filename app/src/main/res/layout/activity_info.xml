<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.detail.InfoActivity">
    <data>
        <import type="android.view.View"/>
        <variable
            name="infoNavigator"
            type="michealcob.ts.gidimobile.ui.detail.InfoNavigator" />
        <variable
            name="infoViewModel"
            type="michealcob.ts.gidimobile.ui.detail.InfoViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:background="#fff"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:src="@drawable/ic_back"
            android:onClick="@{(view) -> infoNavigator.onBack()}"/>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:textSize="34sp"
                    android:textColor="#3E2723"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.FontPath.Bold"
                    android:text="LAGOS, NIGERIA"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp">
                    <ImageView
                        android:id="@+id/iv_current"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ic_cloud"/>
                    <TextView
                        android:id="@+id/tv_current"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:layout_marginLeft="10dp"
                        android:textColor="#2962FF"
                        android:textStyle="bold"
                        android:textAppearance="@style/TextAppearance.FontPath.Bold"
                        android:text="Cloudy"
                        />
                </LinearLayout>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:cardCornerRadius="8dp"
                android:layout_marginRight="10dp"
                android:layout_gravity="end"
                >
                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"/>
            </androidx.cardview.widget.CardView>

        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forecast"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.FontPath.Bold"
                android:textColor="#2E2D2D"
                android:textSize="14sp" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="#3E2723"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="5"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="8dp"
                        android:layout_weight="1"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:textColor="#2E2D2D"
                                android:textAppearance="@style/TextAppearance.FontPath.Bold"
                                android:id="@+id/tv_forecast1"
                                android:layout_marginTop="5dp"
                                />
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_cloud"
                                android:layout_marginTop="10dp"
                                android:id="@+id/iv_forcast1"
                                android:scaleType="fitXY"
                                android:layout_marginBottom="10dp"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:cardCornerRadius="8dp"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:textColor="#fff"
                                android:textAppearance="@style/TextAppearance.FontPath.Bold"
                                android:id="@+id/tv_forecast2"
                                android:layout_marginTop="5dp"
                                />
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_cloud"
                                android:layout_marginTop="10dp"
                                android:id="@+id/iv_forcast2"
                                android:layout_marginBottom="10dp"/>
                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:textColor="#fff"
                                android:textAppearance="@style/TextAppearance.FontPath.Bold"
                                android:id="@+id/tv_forecast3"
                                android:layout_marginTop="5dp"
                                />
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_cloud"
                                android:layout_marginTop="10dp"
                                android:id="@+id/iv_forcast3"
                                android:layout_marginBottom="10dp"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:textColor="#fff"
                                android:textAppearance="@style/TextAppearance.FontPath.Bold"
                                android:id="@+id/tv_forecast4"
                                android:layout_marginTop="5dp"
                                />
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_cloud"
                                android:layout_marginTop="10dp"
                                android:id="@+id/iv_forcast4"
                                android:layout_marginBottom="10dp"/>
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="10dp"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="11sp"
                                android:textColor="#fff"
                                android:textAppearance="@style/TextAppearance.FontPath.Bold"
                                android:id="@+id/tv_forecast5"
                                android:layout_marginTop="5dp"
                                />
                            <ImageView
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:src="@drawable/ic_cloud"
                                android:layout_marginTop="10dp"
                                android:id="@+id/iv_forcast5"
                                android:layout_marginBottom="10dp"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e1e1e1"
            android:layout_marginTop="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Additional Info"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.FontPath.Bold"
            android:textColor="#2E2D2D"
            android:textSize="14sp"
            android:layout_marginTop="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_marginTop="10dp">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Longitude"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.FontPath.Bold"
                    android:textColor="#A3A2A2"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.75"
                    android:id="@+id/tv_lon"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.FontPath.Bold"
                    android:textColor="#2E2D2D"
                    android:textSize="20sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latitide"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.FontPath.Bold"
                    android:textColor="#A3A2A2"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6.5833"
                    android:id="@+id/tv_lat"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.FontPath.Bold"
                    android:textColor="#2E2D2D"
                    android:textSize="20sp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</layout>